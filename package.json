    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "author": "Jovan Nixon",
  "dependencies": {
    "@sendgrid/mail": "^7.4.5",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "netlify": "^7.0.1",
    "nodemon": "^2.0.9"
  }
}
